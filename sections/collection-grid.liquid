{% comment %}
  Collection grid section - displays products in a configurable 4-column grid.
  Supports single (1-col) and double (2-col) card widths with optional badges.
{% endcomment %}

{%- liquid
  assign has_blocks = false
  if section.blocks.size > 0
    assign has_blocks = true
  endif
-%}

<section
  class="collection-grid full-width"
  aria-label="{{ 'sections.collection_grid.aria_label' | t }}">
  <div class="collection-grid__wrapper">
    {%- if section.settings.heading != blank -%}
      <h2 class="collection-grid__heading">{{ section.settings.heading | escape }}</h2>
    {%- endif -%}

    {%- if has_blocks -%}
      <div class="collection-grid__products">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'product_card' -%}
              {%- if block.settings.product != blank -%}
                {%- comment -%}Eager load first 4 cards for LCP optimization{%- endcomment -%}
                {%- assign should_lazy_load = true -%}
                {%- if forloop.index <= 4 -%}
                  {%- assign should_lazy_load = false -%}
                {%- endif -%}
                <div
                  class="collection-grid__item{% if block.settings.card_width == '2' %} collection-grid__item--wide{% endif %}"
                  {{ block.shopify_attributes }}>
                  {% render 'product-card',
                    product: block.settings.product,
                    card_width: block.settings.card_width,
                    show_badge: block.settings.show_badge,
                    badge_text: block.settings.badge_text,
                    lazy_load: should_lazy_load
                  %}
                </div>
              {%- endif -%}
          {%- endcase -%}
        {%- endfor -%}
      </div>
    {%- else -%}
      <p class="collection-grid__empty">{{ 'collections.title' | t }}</p>
    {%- endif -%}

    {%- if section.settings.seo_heading != blank or section.settings.seo_text != blank -%}
      <div class="collection-grid__seo">
        <div class="collection-grid__seo-inner">
          {%- if section.settings.seo_heading != blank -%}
            <h2 class="collection-grid__seo-heading">{{ section.settings.seo_heading | escape }}</h2>
          {%- endif -%}
          {%- if section.settings.seo_text != blank -%}
            <div class="collection-grid__seo-text">{{ section.settings.seo_text }}</div>
          {%- endif -%}
        </div>
      </div>
    {%- endif -%}
  </div>
</section>

{% stylesheet %}
  /* Accessibility */
  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  .collection-grid {
    background-color: #FFF7EA;
    padding: 60px 0 80px;
    padding-top: calc(var(--total-header-height, 110px) + 60px);
  }

  .collection-grid__wrapper {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0;
  }

  /* Responsive - Large Desktop */
  @media (max-width: 1300px) {
    .collection-grid__wrapper {
      padding: 0 40px;
    }
  }

  .collection-grid__heading {
    font-family: var(--font-alyona);
    font-size: 50px;
    font-weight: 400;
    line-height: 1;
    text-align: center;
    color: #3E2027;
    margin: 0 0 60px;
  }

  .collection-grid__products {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
  }

  .collection-grid__item {
    grid-column: span 1;
  }

  .collection-grid__item--wide {
    grid-column: span 2;
  }

  .collection-grid__empty {
    text-align: center;
    font-family: var(--font-jokker);
    font-size: 16px;
    color: #3E2027;
    padding: 40px;
  }

  /* SEO Section */
  .collection-grid__seo {
    margin-top: 80px;
    padding-top: 60px;
    border-top: 1px solid rgba(62, 32, 39, 0.2);
  }

  .collection-grid__seo-inner {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .collection-grid__seo-heading {
    font-family: var(--font-alyona);
    font-size: 40px;
    font-weight: 400;
    line-height: 1;
    color: #3E2027;
    margin: 0;
    width: 600px;
  }

  .collection-grid__seo-text {
    font-family: var(--font-jokker);
    font-size: 18px;
    font-weight: 400;
    line-height: 1.5;
    color: #3E2027;
  }

  .collection-grid__seo-text p {
    margin: 0 0 1em;
  }

  .collection-grid__seo-text p:last-child {
    margin-bottom: 0;
  }

  /* Product Card Styles */
  .product-card {
    display: flex;
    flex-direction: column;
    gap: 30px;
    height: 100%;
  }

  .product-card__link {
    display: flex;
    flex-direction: column;
    gap: 30px;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  .product-card__image-wrapper {
    position: relative;
    background-color: transparent;
    height: 420px;
    overflow: hidden;
  }

  .product-card__badge {
    position: absolute;
    top: 20px;
    left: 20px;
    z-index: 2;
    background-color: #FFFFFF;
    border-radius: 70px;
    padding: 10px 16px 8px;
    font-family: var(--font-sweet-sans);
    font-size: 13px;
    font-weight: 500;
    letter-spacing: -0.13px;
    text-transform: uppercase;
    color: #3E2027;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
  }

  .product-card__image-link {
    display: block;
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .product-card__image-container {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.3s ease;
  }

  .product-card__img,
  .product-card__img--single {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-card__placeholder {
    width: 247px;
    height: 370px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(62, 32, 39, 0.05);
  }

  .product-card__placeholder-svg {
    width: 100px;
    height: 100px;
    opacity: 0.3;
  }

  /* Stacked images for bundle/wide cards */
  .product-card__images-stack {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
  }

  .product-card__stacked-image {
    position: relative;
    margin-right: -80px;
    z-index: calc(3 - var(--stack-index, 0));
  }

  .product-card__stacked-image .product-card__img {
    height: 340px;
    width: auto;
    object-fit: contain;
  }

  /* Video on Hover */
  .product-card__video-container {
    position: absolute;
    inset: 0;
    z-index: 2;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .product-card__video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-card--has-video:hover .product-card__video-container {
    opacity: 1;
  }

  .product-card--has-video:hover .product-card__image-container {
    opacity: 0;
  }

  /* Hover Actions */
  .product-card__actions {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: center;
    gap: 10px;
    padding: 15px;
    opacity: 0;
    transform: translateY(10px);
    transition: opacity 0.3s ease, transform 0.3s ease;
    z-index: 5;
  }

  .product-card__image-wrapper:hover .product-card__actions,
  .product-card__image-wrapper:focus-within .product-card__actions {
    opacity: 1;
    transform: translateY(0);
  }

  .product-card__form {
    display: contents;
  }

  .product-card__action-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    height: 40px;
    padding: 10px 20px;
    font-family: var(--font-sweet-sans);
    font-size: 14px;
    font-weight: 500;
    letter-spacing: -0.14px;
    text-transform: uppercase;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: opacity 0.2s ease, transform 0.2s ease;
    white-space: nowrap;
  }

  .product-card__action-btn:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  .product-card__action-btn:focus-visible {
    outline: 2px solid #3E2027;
    outline-offset: 2px;
  }

  .product-card__action-btn--add {
    background-color: #FFFFFF;
    color: #3E2027;
  }

  .product-card__action-btn--add:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .product-card__action-btn--buy {
    background-color: #3E2027;
    color: #FFFFFF;
  }

  .product-card__action-btn--buy:focus-visible {
    outline-color: #FFFFFF;
  }

  /* Product Content */
  .product-card__content {
    display: flex;
    flex-direction: column;
    gap: 12px;
    text-decoration: none;
    color: inherit;
  }

  .product-card__content:hover .product-card__title {
    text-decoration: underline;
  }

  .product-card__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
  }

  .product-card__title {
    font-family: var(--font-sweet-sans);
    font-size: 18px;
    font-weight: 500;
    line-height: normal;
    letter-spacing: -0.18px;
    text-transform: uppercase;
    color: #3E2027;
    margin: 0;
    flex: 1;
  }

  .product-card__title-link {
    color: inherit;
    text-decoration: none;
  }

  .product-card__title-link:hover {
    text-decoration: underline;
  }

  .product-card__title-link:focus-visible {
    outline: 2px solid #3E2027;
    outline-offset: 2px;
  }

  .product-card--wide .product-card__title {
    font-size: 19px;
    letter-spacing: -0.19px;
  }

  .product-card__price {
    display: flex;
    align-items: center;
    gap: 18px;
    font-family: var(--font-sweet-sans);
    font-size: 18px;
    font-weight: 400;
    line-height: normal;
    letter-spacing: -0.18px;
    text-transform: uppercase;
    text-align: right;
  }

  .product-card__compare-price {
    color: #3E2027;
    opacity: 0.5;
    text-decoration: line-through;
  }

  .product-card__current-price {
    color: #3E2027;
  }

  .product-card__current-price--sale {
    color: #E26046;
  }

  .product-card__description {
    font-family: var(--font-jokker);
    font-size: 16px;
    font-weight: 400;
    line-height: 1.5;
    color: #3E2027;
    margin: 0;
  }

  /* Responsive - Tablet Landscape */
  @media (max-width: 1200px) {
    .collection-grid__heading {
      font-size: 42px;
      margin-bottom: 50px;
    }

    .collection-grid__seo-heading {
      font-size: 34px;
      width: 450px;
    }
  }

  /* Responsive - Tablet */
  @media (max-width: 1024px) {
    .collection-grid {
      padding: 50px 0 60px;
      padding-top: calc(var(--total-header-height, 110px) + 50px);
    }

    .collection-grid__wrapper {
      padding: 0 24px;
    }

    .collection-grid__products {
      grid-template-columns: repeat(2, 1fr);
    }

    .collection-grid__item--wide {
      grid-column: span 2;
    }

    .collection-grid__seo-inner {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .collection-grid__seo-heading {
      font-size: 32px;
      width: 100%;
      max-width: 500px;
    }

    .collection-grid__seo-text {
      font-size: 16px;
      line-height: 1.6;
    }

    .product-card__image-wrapper {
      height: 380px;
    }
  }

  /* Responsive - Mobile */
  @media (max-width: 768px) {
    .collection-grid {
      padding: 40px 0 50px;
      padding-top: calc(var(--total-header-height, 110px) + 40px);
    }

    .collection-grid__wrapper {
      padding: 0 12px;
    }

    .collection-grid__heading {
      font-size: 36px;
      margin-bottom: 40px;
    }

    .collection-grid__products {
      grid-template-columns: repeat(2, 1fr);
      gap: 12px;
    }

    .collection-grid__item {
      grid-column: span 1;
    }

    .collection-grid__item--wide {
      grid-column: span 2;
    }

    .collection-grid__seo {
      margin-top: 50px;
      padding-top: 40px;
    }

    .collection-grid__seo-heading {
      font-size: 28px;
      width: 100%;
      max-width: none;
    }

    .collection-grid__seo-text {
      font-size: 15px;
    }

    .product-card__image-wrapper {
      height: 220px;
    }

    .collection-grid__item--wide .product-card__image-wrapper {
      height: 280px;
    }

    .product-card__actions {
      opacity: 1;
      transform: translateY(0);
      flex-direction: column;
      padding: 10px;
      gap: 6px;
    }

    .product-card__action-btn {
      width: 100%;
      height: 36px;
      padding: 8px 12px;
      font-size: 12px;
    }

    .product-card__header {
      flex-direction: column;
      align-items: flex-start;
      gap: 4px;
    }

    .product-card__title {
      font-size: 14px;
    }

    .product-card__price {
      text-align: left;
      font-size: 14px;
    }

    .product-card__description {
      font-size: 13px;
      line-height: 1.4;
    }

    .product-card {
      gap: 16px;
    }

    .product-card__link {
      gap: 16px;
    }

    .product-card__content {
      gap: 8px;
    }

    /* Make wide cards look like single cards on mobile */
    .product-card--wide .product-card__title {
      font-size: 14px;
      letter-spacing: -0.14px;
    }

    .product-card__images-stack {
      display: block;
      width: 100%;
      height: 100%;
    }

    .product-card__stacked-image {
      position: absolute;
      inset: 0;
      margin-right: 0;
      z-index: 1;
    }

    .product-card__stacked-image:not(:first-child) {
      display: none;
    }

    .product-card__stacked-image .product-card__img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    /* Hide video on mobile - no hover */
    .product-card__video-container {
      display: none;
    }
  }

  /* Responsive - Small Mobile */
  @media (max-width: 480px) {
    .collection-grid__heading {
      font-size: 30px;
    }

    .product-card__image-wrapper {
      height: 380px;
    }
  }
{% endstylesheet %}

{% javascript %}
  class ProductCardVideo {
    constructor() {
      this.cards = document.querySelectorAll('[data-product-card]');
      if (!this.cards.length) return;
      this.init();
    }

    init() {
      this.cards.forEach(card => {
        const video = card.querySelector('[data-product-video]');
        if (!video) return;

        const imageLink = card.querySelector('.product-card__image-link');

        const playVideo = () => {
          video.play().catch(() => {});
        };

        const pauseVideo = () => {
          video.pause();
          video.currentTime = 0;
        };

        card.addEventListener('mouseenter', playVideo);
        card.addEventListener('mouseleave', pauseVideo);

        if (imageLink) {
          imageLink.addEventListener('focus', playVideo);
          imageLink.addEventListener('blur', pauseVideo);
        }
      });
    }
  }

  function initProductCardVideos() {
    if (!document.querySelector('[data-product-video]')) return;
    new ProductCardVideo();
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initProductCardVideos);
  } else {
    initProductCardVideos();
  }
{% endjavascript %}

{% schema %}
{
  "name": "t:sections.collection_grid.name",
  "class": "collection-grid-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:labels.heading",
      "default": "Meet Your Scents"
    },
    {
      "type": "header",
      "content": "t:sections.collection_grid.settings.seo_header"
    },
    {
      "type": "text",
      "id": "seo_heading",
      "label": "t:sections.collection_grid.settings.seo_heading",
      "info": "t:sections.collection_grid.settings.seo_heading_info"
    },
    {
      "type": "richtext",
      "id": "seo_text",
      "label": "t:sections.collection_grid.settings.seo_text",
      "info": "t:sections.collection_grid.settings.seo_text_info"
    }
  ],
  "blocks": [
    {
      "type": "product_card",
      "name": "t:blocks.product_card.name",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "t:labels.product"
        },
        {
          "type": "select",
          "id": "card_width",
          "label": "t:blocks.product_card.settings.card_width",
          "options": [
            {
              "value": "1",
              "label": "t:blocks.product_card.settings.width_single"
            },
            {
              "value": "2",
              "label": "t:blocks.product_card.settings.width_double"
            }
          ],
          "default": "1"
        },
        {
          "type": "checkbox",
          "id": "show_badge",
          "label": "t:labels.show_badge",
          "default": false
        },
        {
          "type": "text",
          "id": "badge_text",
          "label": "t:labels.badge_text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.collection_grid.name"
    }
  ]
}
{% endschema %}
