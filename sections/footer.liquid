{% comment %}
  Footer section with large logo, menu columns, newsletter signup, and social links
{% endcomment %}

<footer class="footer full-width">
  <div class="footer__container">
    {%- comment -%} Top Horizontal Line {%- endcomment -%}
    <div class="footer__line"></div>

    {%- comment -%} Large Baudie Logo {%- endcomment -%}
    <div class="footer__logo-wrapper">
      {% if section.settings.footer_logo %}
        {{ section.settings.footer_logo | image_url: width: 1200 | image_tag: alt: shop.name, class: 'footer__logo-image' }}
      {% else %}
        <div class="footer__logo-text">{{ shop.name }}</div>
      {% endif %}
    </div>

    {%- comment -%} Second Horizontal Line {%- endcomment -%}
    <div class="footer__line"></div>

    {%- comment -%} Main Footer Content - 4 Columns {%- endcomment -%}
    <div class="footer__content">
      {%- comment -%} Column 1: Shop Menu {%- endcomment -%}
      {% if section.settings.menu_shop != blank %}
        <div class="footer__column">
          <h3 class="footer__heading">{{ section.settings.menu_shop.title }}</h3>
          <ul class="footer__menu">
            {% for link in section.settings.menu_shop.links %}
              <li class="footer__menu-item">
                <a href="{{ link.url }}" class="footer__menu-link">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}

      {%- comment -%} Column 2: Company Menu {%- endcomment -%}
      {% if section.settings.menu_company != blank %}
        <div class="footer__column">
          <h3 class="footer__heading">{{ section.settings.menu_company.title }}</h3>
          <ul class="footer__menu">
            {% for link in section.settings.menu_company.links %}
              <li class="footer__menu-item">
                <a href="{{ link.url }}" class="footer__menu-link">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}

      {%- comment -%} Column 3: Customer Care Menu {%- endcomment -%}
      {% if section.settings.menu_customer_care != blank %}
        <div class="footer__column">
          <h3 class="footer__heading">{{ section.settings.menu_customer_care.title }}</h3>
          <ul class="footer__menu">
            {% for link in section.settings.menu_customer_care.links %}
              <li class="footer__menu-item">
                <a href="{{ link.url }}" class="footer__menu-link">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}

      {%- comment -%} Column 4: Newsletter & Social {%- endcomment -%}
      <div class="footer__column footer__column--newsletter">
        <div class="footer__header-row">
          <div class="footer__text-content">
            <h3 class="footer__heading">{{ 'footer.stay_connected' | t }}</h3>
            <p class="footer__newsletter-description">
              {{ 'footer.newsletter_description' | t }}
            </p>
          </div>

          {%- comment -%} Social Media Links {%- endcomment -%}
          <div class="footer__social">
            {% if section.settings.facebook_url != blank %}
              <a
                href="{{ section.settings.facebook_url }}"
                class="footer__social-link"
                target="_blank"
                rel="noopener">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 20 20"
                  fill="none">
                  <g clip-path="url(#clip0_520_117)">
