{% comment %}
  Footer section with large logo, menu columns, newsletter signup, and social links
{% endcomment %}

<footer class="footer full-width">
  <div class="footer__container">
    {%- comment -%} Top Horizontal Line {%- endcomment -%}
    <div class="footer__line"></div>

    {%- comment -%} Large Baudie Logo {%- endcomment -%}
    <div class="footer__logo-wrapper">
      {% if section.settings.footer_logo %}
        {{ section.settings.footer_logo | image_url: width: 1200 | image_tag: alt: shop.name, class: 'footer__logo-image' }}
      {% else %}
        <div class="footer__logo-text">{{ shop.name }}</div>
      {% endif %}
    </div>

    {%- comment -%} Second Horizontal Line {%- endcomment -%}
    <div class="footer__line"></div>

    {%- comment -%} Main Footer Content - 4 Columns {%- endcomment -%}
    <div class="footer__content">
      {%- comment -%} Column 1: Shop Menu {%- endcomment -%}
      {% if section.settings.menu_shop != blank %}
        <div class="footer__column">
          <h3 class="footer__heading">{{ section.settings.menu_shop.title }}</h3>
          <ul class="footer__menu">
            {% for link in section.settings.menu_shop.links %}
              <li class="footer__menu-item">
                <a href="{{ link.url }}" class="footer__menu-link">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}

      {%- comment -%} Column 2: Company Menu {%- endcomment -%}
      {% if section.settings.menu_company != blank %}
        <div class="footer__column">
          <h3 class="footer__heading">{{ section.settings.menu_company.title }}</h3>
          <ul class="footer__menu">
            {% for link in section.settings.menu_company.links %}
              <li class="footer__menu-item">
                <a href="{{ link.url }}" class="footer__menu-link">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}

      {%- comment -%} Column 3: Customer Care Menu {%- endcomment -%}
      {% if section.settings.menu_customer_care != blank %}
        <div class="footer__column">
          <h3 class="footer__heading">{{ section.settings.menu_customer_care.title }}</h3>
          <ul class="footer__menu">
            {% for link in section.settings.menu_customer_care.links %}
              <li class="footer__menu-item">
                <a href="{{ link.url }}" class="footer__menu-link">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}

      {%- comment -%} Column 4: Newsletter & Social {%- endcomment -%}
      <div class="footer__column footer__column--newsletter">
        <div class="footer__header-row">
          <div class="footer__text-content">
            <h3 class="footer__heading">{{ 'footer.stay_connected' | t }}</h3>
            <p class="footer__newsletter-description">
              {{ 'footer.newsletter_description' | t }}
            </p>
          </div>

          {%- comment -%} Social Media Links {%- endcomment -%}
          <div class="footer__social">
            {% if section.settings.facebook_url != blank %}
              <a
                href="{{ section.settings.facebook_url }}"
                class="footer__social-link"
                target="_blank"
                rel="noopener">
                <svg
                  width="20"
                  height="20"
                  viewBox="0 0 20 20"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg">
                  <path d="M20 10C20 4.47715 15.5229 0 10 0C4.47715 0 0 4.47715 0 10C0 14.9912 3.65684 19.1283 8.4375 19.8785V12.8906H5.89844V10H8.4375V7.79688C8.4375 5.29063 9.93047 3.90625 12.2146 3.90625C13.3084 3.90625 14.4531 4.10156 14.4531 4.10156V6.5625H13.1922C11.95 6.5625 11.5625 7.3334 11.5625 8.125V10H14.3359L13.8926 12.8906H11.5625V19.8785C16.3432 19.1283 20 14.9912 20 10Z" fill="#3E2027" />
                </svg>
                <span>{{ 'footer.facebook' | t }}</span>
              </a>
            {% endif %}

            {% if section.settings.instagram_url != blank %}
              <a
                href="{{ section.settings.instagram_url }}"
                class="footer__social-link"
                target="_blank"
                rel="noopener">
                <svg
                  width="20"
                  height="20"
                  viewBox="0 0 20 20"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg">
                  <path d="M10 0C12.717 0 13.056 0.00999994 14.122 0.0599999C15.187 0.11 15.912 0.277 16.55 0.525C17.21 0.779 17.766 1.123 18.322 1.678C18.8305 2.1779 19.224 2.78259 19.475 3.45C19.722 4.087 19.89 4.813 19.94 5.878C19.987 6.944 20 7.283 20 10C20 12.717 19.99 13.056 19.94 14.122C19.89 15.187 19.722 15.912 19.475 16.55C19.2247 17.2178 18.8311 17.8226 18.322 18.322C17.822 18.8303 17.2173 19.2238 16.55 19.475C15.913 19.722 15.187 19.89 14.122 19.94C13.056 19.987 12.717 20 10 20C7.283 20 6.944 19.99 5.878 19.94C4.813 19.89 4.088 19.722 3.45 19.475C2.78233 19.2245 2.17753 18.8309 1.678 18.322C1.16941 17.8222 0.775931 17.2175 0.525 16.55C0.277 15.913 0.11 15.187 0.0599999 14.122C0.0129999 13.056 0 12.717 0 10C0 7.283 0.00999994 6.944 0.0599999 5.878C0.11 4.812 0.277 4.088 0.525 3.45C0.775236 2.78218 1.1688 2.17732 1.678 1.678C2.17767 1.16923 2.78243 0.775729 3.45 0.525C4.088 0.277 4.812 0.11 5.878 0.0599999C6.944 0.0129999 7.283 0 10 0ZM10 5C8.67392 5 7.40215 5.52678 6.46447 6.46447C5.52678 7.40215 5 8.67392 5 10C5 11.3261 5.52678 12.5979 6.46447 13.5355C7.40215 14.4732 8.67392 15 10 15C11.3261 15 12.5979 14.4732 13.5355 13.5355C14.4732 12.5979 15 11.3261 15 10C15 8.67392 14.4732 7.40215 13.5355 6.46447C12.5979 5.52678 11.3261 5 10 5ZM16.5 4.75C16.5 4.41848 16.3683 4.10054 16.1339 3.86612C15.8995 3.6317 15.5815 3.5 15.25 3.5C14.9185 3.5 14.6005 3.6317 14.3661 3.86612C14.1317 4.10054 14 4.41848 14 4.75C14 5.08152 14.1317 5.39946 14.3661 5.63388C14.6005 5.8683 14.9185 6 15.25 6C15.5815 6 15.8995 5.8683 16.1339 5.63388C16.3683 5.39946 16.5 5.08152 16.5 4.75ZM10 7C10.7956 7 11.5587 7.31607 12.1213 7.87868C12.6839 8.44129 13 9.20435 13 10C13 10.7956 12.6839 11.5587 12.1213 12.1213C11.5587 12.6839 10.7956 13 10 13C9.20435 13 8.44129 12.6839 7.87868 12.1213C7.31607 11.5587 7 10.7956 7 10C7 9.20435 7.31607 8.44129 7.87868 7.87868C8.44129 7.31607 9.20435 7 10 7Z" fill="#3E2027" />
                </svg>
                <span>{{ 'footer.instagram' | t }}</span>
              </a>
            {% endif %}
          </div>
        </div>

        {%- comment -%} Newsletter Form - Placeholder {%- endcomment -%}
        <form
          class="footer__newsletter-form"
          action="#"
          method="post">
          <input
            type="email"
            name="email"
            class="footer__newsletter-input"
            placeholder="{{ 'footer.email_placeholder' | t }}"
            required>
          <button type="submit" class="footer__newsletter-button">
            {{ 'footer.subscribe' | t }}
          </button>
        </form>
      </div>
    </div>

    {%- comment -%} Bottom Horizontal Line {%- endcomment -%}
    <div class="footer__line"></div>

    {%- comment -%} Bottom Row - Copyright and Email {%- endcomment -%}
    <div class="footer__bottom">
      <div class="footer__copyright">
        {% assign current_year = 'now' | date: '%Y' %}
        {{ 'footer.copyright' | t: year: current_year, shop_name: shop.name }}
      </div>
      {% if section.settings.contact_email != blank %}
        <div class="footer__contact">
          {{ section.settings.contact_email }}
        </div>
      {% endif %}
    </div>
  </div>
</footer>

{% stylesheet %}
  .footer {
    background-color: #FFF7EA;
    padding: 30px 0 0;
  }

  .footer__container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 40px;
  }

  /* Horizontal Lines */
  .footer__line {
    width: 100%;
    height: 1px;
    background-color: #3E2027;
    opacity: 1;
  }

  /* Large Logo Section */
  .footer__logo-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 60px 0;
  }

  .footer__logo-image {
    max-width: 1254px;
    width: 100%;
    height: auto;
    display: block;
  }

  .footer__logo-text {
    font-family: var(--font-alyona);
    font-size: 120px;
    font-weight: 400;
    color: #3E2027;
    text-align: center;
  }

  /* Main Footer Content - 4 Columns */
  .footer__content {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 2.5fr;
    gap: 110px;
    padding: 70px 0 60px;
  }

  .footer__column {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .footer__header-row {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 20px;
  }

  .footer__text-content {
    display: flex;
    flex-direction: column;
    gap: 16px;
    flex: 1;
  }

  .footer__heading {
    font-family: var(--font-sweet-sans);
    font-weight: 500;
    font-size: 16px;
    line-height: normal;
    letter-spacing: -0.16px;
    text-transform: uppercase;
    color: #3E2027;
    margin: 0;
  }

  .footer__menu {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer__menu-item {
    margin: 0;
  }

  .footer__menu-link {
    font-family: var(--font-jokker);
    font-size: 16px;
    line-height: 1.5;
    color: #3E2027;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .footer__menu-link:hover {
    opacity: 0.7;
  }

  /* Newsletter Column */
  .footer__column--newsletter {
    gap: 16px;
  }

  .footer__newsletter-description {
    font-family: var(--font-jokker);
    font-size: 16px;
    line-height: 1.5;
    color: #3E2027;
    margin: 0;
  }

  .footer__newsletter-form {
    display: flex;
    gap: 10px;
    margin-top: 8px;
  }

  .footer__newsletter-input {
    flex: 1;
    height: 50px;
    padding: 10px 25px;
    font-family: var(--font-jokker);
    font-size: 16px;
    line-height: 1.5;
    color: #3E2027;
    background: transparent;
    border: 1px solid #3E2027;
    outline: none;
    transition: border-color 0.2s ease;
  }

  .footer__newsletter-input::placeholder {
    color: #3E2027;
    opacity: 1;
  }

  .footer__newsletter-input:focus {
    border-color: #3E2027;
  }

  .footer__newsletter-button {
    height: 50px;
    padding: 10px 20px;
    background: #3E2027;
    color: #FFFAE6;
    font-family: var(--font-sweet-sans);
    font-weight: 500;
    font-size: 14px;
    line-height: normal;
    letter-spacing: -0.14px;
    text-transform: uppercase;
    border: none;
    cursor: pointer;
    white-space: nowrap;
    transition: opacity 0.2s ease
    , transform 0.2s ease;
  }

  .footer__newsletter-button:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  .footer__newsletter-button:active {
    opacity: 0.8;
    transform: translateY(0);
  }

  /* Social Media Links */
  .footer__social {
    display: flex;
    flex-direction: column;
    gap: 19px;
    align-items: flex-start;
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: var(--font-jokker);
    font-size: 16px;
    line-height: 1.2;
    color: #3E2027;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .footer__social-link:hover {
    opacity: 0.7;
  }

  .footer__social-link svg {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  /* Bottom Row */
  .footer__bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24px 0;
  }

  .footer__copyright {
    font-family: var(--font-jokker);
    font-size: 16px;
    line-height: 1.5;
    color: #3E2027;
    text-align: center;
  }

  .footer__contact {
    font-family: var(--font-jokker);
    font-size: 16px;
    line-height: 1.5;
    color: #3E2027;
    text-align: right;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .footer__container {
      padding: 0 24px;
    }

    .footer__logo-wrapper {
      padding: 50px 0;
    }

    .footer__content {
      gap: 60px;
      padding: 60px 0 50px;
    }
  }

  @media (max-width: 768px) {
    .footer__container {
      padding: 0 16px;
    }

    .footer__logo-wrapper {
      padding: 40px 0;
    }

    .footer__logo-image {
      max-width: 100%;
    }

    .footer__logo-text {
      font-size: 80px;
    }

    /* Stack columns into 2x2 grid on tablet */
    .footer__content {
      grid-template-columns: repeat(2, 1fr);
      gap: 40px 30px;
      padding: 50px 0 40px;
    }

    .footer__heading {
      font-size: 15px;
    }

    .footer__menu-link,
    .footer__newsletter-description,
    .footer__social-link {
      font-size: 14px;
    }

    .footer__newsletter-input {
      font-size: 14px;
      padding: 10px 20px;
    }

    .footer__bottom {
      flex-direction: column;
      gap: 12px;
      padding: 20px 0;
      text-align: center;
    }

    .footer__copyright,
    .footer__contact {
      text-align: center;
      font-size: 14px;
    }
  }

  @media (max-width: 480px) {
    .footer__logo-wrapper {
      padding: 30px 0;
    }

    .footer__logo-text {
      font-size: 60px;
    }

    /* Single column on mobile */
    .footer__content {
      grid-template-columns: 1fr;
      gap: 35px;
      padding: 40px 0 35px;
    }

    .footer__heading {
      font-size: 14px;
    }

    .footer__menu-link,
    .footer__newsletter-description,
    .footer__social-link,
    .footer__copyright,
    .footer__contact {
      font-size: 13px;
    }

    .footer__newsletter-form {
      flex-direction: column;
      gap: 8px;
    }

    .footer__newsletter-input,
    .footer__newsletter-button {
      width: 100%;
      height: 45px;
    }

    .footer__newsletter-button {
      font-size: 13px;
    }

    .footer__bottom {
      padding: 18px 0;
    }
  }
{% endstylesheet %}

