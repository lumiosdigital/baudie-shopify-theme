{%- liquid
  assign has_items = false
  if cart.item_count > 0
    assign has_items = true
  endif
-%}

<main
  class="main-cart"
  data-main-cart
  data-money-format="{{ shop.money_format | escape }}"
  data-item-singular="{{ 'sidecart.item' | t | escape }}"
  data-item-plural="{{ 'sidecart.items' | t | escape }}">

  <div class="main-cart__container">
    <header class="main-cart__header">
      <h1 class="main-cart__title">{{ section.settings.title }}</h1>
    </header>

    <div class="main-cart__content" data-cart-content>
      {% if has_items %}
        <div class="main-cart__items-wrapper">
          <div class="main-cart__column-headers">
            <span class="main-cart__column-header main-cart__column-header--product">{{ 'cart.column_product' | t }}</span>
            <span class="main-cart__column-header main-cart__column-header--quantity">{{ 'cart.column_quantity' | t }}</span>
            <span class="main-cart__column-header main-cart__column-header--total">{{ 'cart.column_total' | t }}</span>
          </div>
          <ul class="main-cart__items" role="list" data-cart-items>
            {% for item in cart.items %}
              {% render 'cart-item', item: item %}
            {% endfor %}
          </ul>
        </div>

        <aside class="main-cart__summary" data-cart-summary>
          <div class="main-cart__subtotal-section">
            <div class="main-cart__subtotal-header">
              <span class="main-cart__subtotal-label">{{ 'sidecart.subtotal' | t }}</span>
              <span class="main-cart__item-count" data-cart-item-count>(<span data-cart-count>{{ cart.item_count }}</span> <span data-cart-items-label>{% if cart.item_count == 1 %}{{ 'sidecart.item' | t }}{% else %}{{ 'sidecart.items' | t }}{% endif %}</span>)</span>
            </div>
            <div class="main-cart__subtotal-row">
              <span class="main-cart__subtotal-value" data-cart-subtotal aria-live="polite">{{ cart.total_price | money }}</span>
              <span class="main-cart__shipping-note">{{ 'sidecart.shipping_note' | t }}</span>
            </div>
          </div>

          <form class="main-cart__promocode">
            <label for="promocode-input" class="main-cart__promocode-label">{{ 'cart.promocode_label' | t }}</label>
            <div class="main-cart__promocode-input-wrapper">
              <input
                type="text"
                id="promocode-input"
                name="discount"
                class="main-cart__promocode-input"
                placeholder="{{ 'cart.promocode_placeholder' | t }}">
              <button type="submit" class="main-cart__promocode-btn">{{ 'cart.promocode_apply' | t }}</button>
            </div>
          </form>

          {% if section.settings.shipping_content != blank %}
            <div class="main-cart__info-block">
              <h2 class="main-cart__info-heading">{{ 'cart.shipping_label' | t }}</h2>
              <div class="main-cart__info-content">
                {{ section.settings.shipping_content }}
              </div>
            </div>
          {% endif %}

          {% if section.settings.returns_content != blank %}
            <div class="main-cart__info-block">
              <h2 class="main-cart__info-heading">{{ 'cart.returns_label' | t }}</h2>
              <div class="main-cart__info-content">
                {{ section.settings.returns_content }}
              </div>
            </div>
          {% endif %}

          <div class="main-cart__actions">
            <a href="{{ routes.all_products_collection_url }}" class="main-cart__btn main-cart__btn--secondary">
              {{ section.settings.continue_button_text }}
            </a>
            <a href="{{ routes.checkout_url }}" class="main-cart__btn main-cart__btn--primary">
              {{ section.settings.checkout_button_text }}
            </a>
          </div>
        </aside>
      {% else %}
        <div class="main-cart__empty" data-cart-empty>
          <h2 class="main-cart__empty-title">{{ section.settings.empty_title }}</h2>
          <p class="main-cart__empty-message">{{ section.settings.empty_message }}</p>
          <a href="{{ routes.all_products_collection_url }}" class="main-cart__continue-btn">
            {{ section.settings.continue_button_text }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</main>

