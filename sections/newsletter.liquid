{% comment %}
  Newsletter signup section
  Matches Figma design: https://www.figma.com/design/HU0mvwy2CH0bCWJAHTWRhT/Baudie?node-id=399-3440
{% endcomment %}

<div class="newsletter-section full-width">
  <div class="newsletter-section__container">
    <h2 class="newsletter-section__heading">
      {{ section.settings.heading }}
    </h2>

    <p class="newsletter-section__description">
      {{ section.settings.description }}
    </p>

    <div class="newsletter-section__form">
      <input
        type="email"
        class="newsletter-section__input"
        placeholder="{{ section.settings.placeholder }}"
        aria-label="{{ 'newsletter.email_placeholder' | t }}">
      <button type="button" class="newsletter-section__button">
        {{ section.settings.button_text }}
      </button>
    </div>

    {% if section.settings.fine_print != blank %}
      <div class="newsletter-section__fine-print">
        {{ section.settings.fine_print }}
      </div>
    {% endif %}
  </div>
</div>

{% stylesheet %}
  .newsletter-section {
    background-color: #FFF7EA;
    padding: 80px 0;
  }

  .newsletter-section__container {
    max-width: 765px;
    margin: 0 auto;
    padding: 0 40px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 33px;
  }

  .newsletter-section__heading {
    font-family: var(--font-alyona);
    font-size: 70px;
    font-weight: 400;
    line-height: 1;
    color: #3E2027;
    text-align: center;
    margin: 0;
    width: 100%;
  }

  .newsletter-section__description {
    font-family: var(--font-jokker);
    font-size: 16px;
    line-height: 1.5;
    color: #3E2027;
    text-align: center;
    margin: 0;
    width: 100%;
  }

  .newsletter-section__form {
    display: flex;
    gap: 8px;
    align-items: center;
    width: 100%;
    justify-content: center;
  }

  .newsletter-section__input {
    width: 404px;
    height: 50px;
    padding: 10px 25px;
    font-family: var(--font-jokker);
    font-size: 16px;
    line-height: 1.5;
    color: #3E2027;
    background-color: transparent;
    border: 1px solid #3E2027;
    outline: none;
  }

  .newsletter-section__input::placeholder {
    color: #3E2027;
    opacity: 1;
  }

  .newsletter-section__input:focus {
    border-color: #3E2027;
    outline: 2px solid rgba(62, 32, 39, 0.1);
    outline-offset: 0;
  }

  .newsletter-section__button {
    height: 50px;
    padding: 10px 20px;
    font-family: var(--font-sweet-sans);
    font-weight: 500;
    font-size: 14px;
    line-height: normal;
    letter-spacing: -0.14px;
    text-transform: uppercase;
    color: #FFFAE6;
    background-color: #3E2027;
    border: none;
    cursor: pointer;
    transition: opacity 0.2s ease
    , transform 0.2s ease;
    white-space: nowrap;
  }

  .newsletter-section__button:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  .newsletter-section__button:active {
    opacity: 0.8;
    transform: translateY(0);
  }

  .newsletter-section__fine-print {
    font-family: var(--font-jokker);
    font-size: 10px;
    line-height: 1.5;
    color: #3E2027;
    opacity: 0.7;
    text-align: center;
    margin: 0;
    width: 100%;
  }

  .newsletter-section__fine-print a {
    color: #3E2027;
    text-decoration: underline;
    text-decoration-skip-ink: none;
    text-underline-position: from-font;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .newsletter-section {
      padding: 60px 0;
    }

    .newsletter-section__container {
      padding: 0 24px;
    }

    .newsletter-section__heading {
      font-size: 56px;
    }
  }

  @media (max-width: 768px) {
    .newsletter-section {
      padding: 50px 0;
    }

    .newsletter-section__container {
      padding: 0 16px;
      gap: 28px;
    }

    .newsletter-section__heading {
      font-size: 42px;
      line-height: 1.1;
    }

    .newsletter-section__description {
      font-size: 14px;
    }

    .newsletter-section__form {
      flex-direction: column;
      gap: 12px;
      width: 100%;
    }

    .newsletter-section__input {
      width: 100%;
      height: 48px;
      font-size: 15px;
    }

    .newsletter-section__button {
      width: 100%;
      height: 48px;
    }

    .newsletter-section__fine-print {
      font-size: 9px;
    }
  }
{% endstylesheet %}

{% schema %}
  {
    "name": "t:general.newsletter",
    "class": "newsletter-section",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.newsletter.content_header"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "t:labels.heading",
        "default": "Stay Fresh. Stay in the Loop."
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "t:labels.description",
        "default": "Be the first to know when new scents drop, bundles launch, and good pit news happens. No spam — just good vibes and better deodorant days."
      },
      {
        "type": "text",
        "id": "placeholder",
        "label": "t:labels.email_placeholder",
        "default": "Enter your email"
      }, {
        "type": "text",
        "id": "button_text",
        "label": "t:labels.button_text",
        "default": "SUBSCRIBE"
      }, {
        "type": "richtext",
        "id": "fine_print",
        "label": "t:labels.fine_print",
        "default": "<p>We'll only text when it's worth it — new scents, early access, or something good for your pits.<br>Standard rates apply. Reply STOP anytime. See our <a href=\"/pages/privacy-policy\">Privacy Policy</a> and <a href=\"/pages/terms\">Terms</a>.</p>"
      }
    ],
    "presets": [
      {
        "name": "t:general.newsletter"
      }
    ]
  }
{% endschema %}