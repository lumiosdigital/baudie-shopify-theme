  (function initAjaxAddToCart() {
    function isProductForm(form) {
      if (!form || form.tagName !== 'FORM') return false;

      const action = form.getAttribute('action') || '';
      if (action.includes('/cart/add')) return true;

      const formTypeInput = form.querySelector('input[name="form_type"][value="product"]');
      if (formTypeInput) return true;

      return false;
    }

    document.addEventListener('submit', async (e) => {
      const form = e.target.tagName === 'FORM' ? e.target : e.target.closest('form');
      if (!isProductForm(form)) return;

      e.preventDefault();

      const submitBtn = form.querySelector('[type="submit"], button[name="add"]');
      const originalText = submitBtn?.innerHTML;
      const originalDisabled = submitBtn?.disabled;

      if (submitBtn) {
        submitBtn.disabled = true;
        submitBtn.classList.add('is-loading');
      }

      try {
        const variantId = form.querySelector('input[name="id"]')?.value;
        const quantityInput = form.querySelector('input[name="quantity"]');
        const quantity = quantityInput ? quantityInput.value : '1';

        if (!variantId) {
          throw new Error('No variant ID found');
        }

        const addResponse = await fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
            'Accept': 'application/json'
          },
          body: new URLSearchParams({ id: variantId, quantity: quantity })
        });

        const responseData = await addResponse.json().catch(() => ({}));

        if (!addResponse.ok) {
          const errorMsg = responseData.description || responseData.message || '';
          if (errorMsg.toLowerCase().includes('sold out')) {
            console.warn(
              'Shopify Cart API returned "sold out" error. This is often a store configuration issue.\n' +
              'Fix: Go to Shopify Admin → Settings → Locations, ensure a location exists,\n' +
              'then go to Products → [Product] → Inventory and assign stock to that location.'
            );
          }
          throw new Error(errorMsg || 'Failed to add to cart');
        }

        const cartResponse = await fetch('/cart.js');
        const cart = await cartResponse.json();

        document.querySelectorAll('[data-cart-count]').forEach(el => {
          el.textContent = cart.item_count;
          el.style.display = cart.item_count > 0 ? '' : 'none';
        });

        document.dispatchEvent(new CustomEvent('cart:updated', { detail: cart }));
        document.dispatchEvent(new CustomEvent('cart:open'));
      } catch (error) {
        alert(error.message || 'Could not add item to cart. Please try again.');
      } finally {
        if (submitBtn) {
          submitBtn.disabled = originalDisabled || false;
          submitBtn.classList.remove('is-loading');
        }
        if (submitBtn && originalText) {
          submitBtn.innerHTML = originalText;
        }
      }
    });
  })();

  if (Shopify.designMode) {
    document.addEventListener('shopify:section:select', (e) => {
      if (e.target.querySelector('[data-sidecart]')) {
        const sidecart = document.getElementById('sidecart');
        if (sidecart) {
          sidecart.classList.add('is-open');
          sidecart.setAttribute('aria-hidden', 'false');
        }
      }
    });

    document.addEventListener('shopify:section:deselect', (e) => {
      if (e.target.querySelector('[data-sidecart]')) {
        const sidecart = document.getElementById('sidecart');
        if (sidecart) {
          sidecart.classList.remove('is-open');
          sidecart.setAttribute('aria-hidden', 'true');
        }
      }
    });
  }
