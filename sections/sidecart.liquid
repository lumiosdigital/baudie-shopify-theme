{%- liquid
  assign item_count = cart.item_count
  assign has_items = false
  if item_count > 0
    assign has_items = true
  endif

  assign enable_quick_cart = settings.enable_quick_cart
  assign show_dynamic_checkout = settings.show_dynamic_checkout
-%}

{% if enable_quick_cart %}
  <div
    class="sidecart"
    id="sidecart"
    aria-hidden="true"
    data-sidecart
    data-money-format="{{ shop.money_format | escape }}"
    data-item-singular="{{ 'sidecart.item' | t | escape }}"
    data-item-plural="{{ 'sidecart.items' | t | escape }}">

    <div class="sidecart__overlay" id="sidecart-overlay"></div>

    <div
      class="sidecart__drawer"
      role="dialog"
      aria-modal="true"
      aria-label="{{ 'sidecart.title' | t }}">

      <div class="sidecart__header">
        <h2 class="sidecart__title">
          <span class="sidecart__count" data-sidecart-count aria-live="polite">{{ item_count }}</span>
          <span data-sidecart-items-label>{% if item_count == 1 %}{{ 'sidecart.item' | t }}{% else %}{{ 'sidecart.items' | t }}{% endif %}</span>
        </h2>
        <button
          type="button"
          class="sidecart__close"
          aria-label="{{ 'sidecart.close' | t }}"
          id="sidecart-close">
          <svg aria-hidden="true" focusable="false" width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
          </svg>
        </button>
      </div>

      <div class="sidecart__content" data-sidecart-content>
        {% if has_items %}
          <ul class="sidecart__items" role="list" data-sidecart-items>
            {% for item in cart.items %}
              {% render 'sidecart-item', item: item %}
            {% endfor %}
          </ul>
        {% else %}
          <div class="sidecart__empty" data-sidecart-empty>
            <h3 class="sidecart__empty-title">{{ section.settings.empty_title }}</h3>
            <p class="sidecart__empty-message">{{ section.settings.empty_message }}</p>
            <a href="{{ routes.all_products_collection_url }}" class="sidecart__continue-btn">
              {{ section.settings.continue_button_text }}
            </a>
          </div>
        {% endif %}
      </div>

      <div class="sidecart__footer{% unless has_items %} sidecart__footer--hidden{% endunless %}" data-sidecart-footer>
        <div class="sidecart__subtotal-row">
          <span class="sidecart__subtotal-label">{{ 'sidecart.subtotal' | t }}</span>
          <div class="sidecart__subtotal-value-wrapper">
            <span class="sidecart__subtotal-value" data-sidecart-subtotal aria-live="polite">{{ cart.total_price | money }}</span>
            <span class="sidecart__shipping-note">{{ 'sidecart.shipping_note' | t }}</span>
          </div>
        </div>

        <div class="sidecart__actions">
          <a href="{{ routes.cart_url }}" class="sidecart__btn sidecart__btn--secondary">
            {{ 'sidecart.view_cart' | t }}
          </a>
          <a href="{{ routes.checkout_url }}" class="sidecart__btn sidecart__btn--primary">
            {{ 'sidecart.checkout' | t }}
          </a>
        </div>

        {% if show_dynamic_checkout %}
          <div class="sidecart__dynamic-checkout" data-sidecart-dynamic-checkout>
            {{ content_for_additional_checkout_buttons }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
{% endif %}

{% stylesheet %}
